<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D1C585"
    tools:context=".MainActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/x"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:translationY="40dp"
            android:translationX="-40dp"
            android:rotation="20"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/o"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:translationY="-40dp"
            android:translationX="230dp"
            android:rotation="20"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/o"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:translationY="170dp"
            android:translationX="170dp"
            android:rotation="20"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/x"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:translationY="250dp"
            android:translationX="80dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/x"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:translationY="320dp"
            android:translationX="280dp"
            android:rotation="30"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/o"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:translationY="400dp"
            android:translationX="70dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/o"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:translationY="350dp"
            android:translationX="-60dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/x"
            android:rotation="10"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationX="10dp"
            android:translationY="-150dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/o"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:translationX="-50dp"
            android:translationY="-100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/choose_btn"
                            style="@style/Button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/choose_game"
                            android:scaleX="0.6"
                            android:scaleY="0.9"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/setting_btn"
                            android:background="@drawable/settings"
                            android:scaleX="0.4"
                            android:scaleY="0.6"
                            style="@style/Button"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                </LinearLayout>

        </LinearLayout>








    </RelativeLayout>


